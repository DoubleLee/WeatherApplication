<Window x:Class="WeatherApplication.Locations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeatherApplication"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="400"
      Title="Locations"
      Height="350" Width="200" Loaded="Window_Loaded">
	<StackPanel Margin="0,0,0,0" >
		<ListBox x:Name="listBox" Margin="0,0,00,0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" SelectionChanged="listBox_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
		<Button x:Name="buttonAdd" Content="Add" Click="buttonAdd_Click"/>
		<Button x:Name="buttonModify" Content="Modify" Click="buttonModify_Click"/>
		<Button x:Name="buttonDelete" Content="Delete" Click="buttonDelete_Click"/>
	</StackPanel>

</Window>
